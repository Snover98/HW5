                                        if(!isNumExp($1) || !isNumExp($3)){
                                            output::errorMismatch(yylineno);
                                            exit(0);
                                        }
                                        $$ = new Expression(BOOLEXP);
                                        delete $1;
                                        delete $3;
                                    }
;

BoolExp:            Exp {
                            if(!isLegalExpType($1, BOOLEXP)){
                                output::errorMismatch(yylineno);
                                exit(0);
                            }
                        }

;

M1:                 {addEmptyScope();}
;

